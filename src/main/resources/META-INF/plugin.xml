<idea-plugin>
    <id>com.generator.testgenerator</id>
    <name>Junit Java Test Generator</name>
    <vendor>Example</vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="GenerateJavaTests"
                class="com.generator.GenerateTestsAction"
                text="Generate Java Unit Tests"
                description="Generate JUnit tests using LLM">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
